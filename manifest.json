{
"manifest_version": 3,
    "name": "Woke = Respect",
    "description": "'I wish I had a little thing on my computer that just replaced the word 'woke' with 'treating people with respect' â€”Neil Gaiman",
    "version": "1.0",
   "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "128": "icon128.png"
    }
}